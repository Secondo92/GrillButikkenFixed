@model List<WebApp.DTO.ProductDTO>

@{
    ViewBag.Title = "Produkter";
}

<div class="top-bar">
    <div class="search-container">
        <form action="">
            <button type="submit">
                <i class="bi-box-fill"></i>
                <i class="bi bi-search"></i>
            </button>
            <input type="text" placeholder="Search..." name="Search">
        </form>
    </div>
</div>

<div class="body">
    <div class="crud">
        <button class="crud-btn to-do">Slet</button>
        <button class="crud-btn in-progress">Redigér</button>
        <button class="crud-btn create-type">Opret Type</button>
        <button class="crud-btn create-new">Opret Ny</button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Navn</th>
                <th>Estimeret produktionstid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.EstimatedProductionTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
